{
  "meta": {
    "device": "Sensor",
    "manufacturer": "Smartico",
    "make": "Ultrasonic Gas Meter",
    "model": "GG-1.6, G-2.5, G-4.0, G-6.0",
    "sku": "GMU3.1",
    "type": "Gas Meter",
    "communicationProtocol": "Direct",
    "description": "Configuration for Smartico ultrasonic gas meters"
  },
  "json": {
    "topic": "/devices/smartico_gas_meters",
    "deviceIdField": "devEUI",
    "timestampField": "rxInfo[0].time",
    "keys": [
      { "name": "gatewayId", "path": "rxInfo[0].gatewayID" },
      { "name": "rssi", "path": "rxInfo[0].rssi" },
      { "name": "fCnt", "path": "fCnt" },
      { "name": "frequency", "path": "txInfo.frequency" }
    ],
    "payloadField": "data",
    "payloadEncoding": "Base64",
    "payloadFormat": "sequential"
  },
  "registers": [
    {
      "name": "Status 1",
      "dataKey": "status1",
      "units": "Bitmap",
      "description": "Gas meter status #1",
      "decode": {
        "length": 1,
        "dataType": "Bitmap",
        "bitLabels": [
          "FLG_LOW_BAT",
          "FLG_MOTION_DETECT",
          "FLG_MAGNET_DETECT",
          "FLG_TAMPER_DETECT",
          "STS_VALVE_1",
          "STS_VALVE_2",
          "STS_VALVE_3",
          "FLG_ERR_OVERFLOW"
        ]
      },
      "address": "00"
    },
    {
      "name": "Status 2",
      "dataKey": "status2",
      "units": "Bitmap",
      "description": "Gas meter status #2",
      "decode": {
        "length": 1,
        "dataType": "Bitmap",
        "bitLabels": [
          "FLG_ERR_REVERSE",
          "FLG_ERR_SENSOR",
          "FLG_ERR_GAS",
          "FLG_ERR_TIME",
          "RESERVED",
          "FLG_POWER_ON",
          "FLG_LOCK",
          "FLG_CFG_DONE"
        ]
      },
      "address": "01"
    },
    {
      "name": "Model",
      "dataKey": "Model",
      "units": "Bitmap",
      "address": "02",
      "description": "Gas meter model",
      "decode": {
        "length": 1,
        "dataType": "Bitmap",
        "bitLabels": [
          "METER_CLASS_0",
          "METER_CLASS_1",
          "METER_CLASS_2",
          "METER_UNITS",
          "Reserved_4",
          "Reserved_5",
          "Reserved_6",
          "Reserved_7"
        ]
      }
    },
    {
      "name": "Serial",
      "dataKey": "Serial",
      "units": "",
      "address": "03",
      "description": "Serial number (hex string, 3 bytes)",
      "decode": {
        "length": 3,
        "dataType": "Hex"
      }
    },
    {
      "name": "Volume",
      "dataKey": "Volume",
      "units": "m³",
      "address": "06",
      "description": "Total volume, unsigned integer, divide by 1000 for value in m³",
      "decode": {
        "length": 4,
        "dataType": "DoubleWord",
        "multiplier": 0.001
      }
    },
    {
      "name": "Temp",
      "dataKey": "Temp",
      "units": "°C",
      "address": "0A",
      "description": "Temperature (optional), signed integer",
      "decode": {
        "length": 2,
        "dataType": "SignedWord",
        "multiplier": 1
      }
    }
  ]
}
